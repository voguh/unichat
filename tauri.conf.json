{
    "$schema": "https://schema.tauri.app/config/2.0.0-rc",
    "identifier": "io.github.voguh.unichat",
    "build": {
        "beforeDevCommand": "pnpm dev:ui",
        "beforeBuildCommand": "pnpm build:ui",
        "devUrl": "http://localhost:1421",
        "frontendDist": "./webapp/dist"
    },
    "app": {
        "windows": [
            {
                "title": "Voguh's UniChat",
                "width": 1280,
                "height": 720,
                "minWidth": 800,
                "minHeight": 600
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["appimage", "dmg", "msi"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}

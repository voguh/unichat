{
    "$schema": "https://schema.tauri.app/config/2.5.1",
    "identifier": "unichat",
    "build": {
        "beforeDevCommand": "pnpm dev:ui",
        "beforeBuildCommand": "pnpm build:ui",
        "devUrl": "http://localhost:1421",
        "frontendDist": "./webapp/dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "main",
                "title": "Voguh's UniChat",
                "width": 1280,
                "height": 720,
                "minWidth": 800,
                "minHeight": 600
            },
            {
                "label": "youtube-chat",
                "title": "Voguh's UniChat - YouTube chat",
                "url": "about:blank",
                "width": 800,
                "height": 600,
                "visible": false,
                "resizable": false,
                "maximizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["deb", "rpm", "appimage", "dmg", "msi"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "license": "LGPL-3.0-only",
        "licenseFile": "./LICENSE"
    }
}

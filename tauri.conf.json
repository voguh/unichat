{
    "$schema": "https://schema.tauri.app/config/2.9.5",
    "productName": "UniChat",
    "identifier": "unichat",
    "build": {
        "beforeDevCommand": "pnpm dev:ui",
        "beforeBuildCommand": "pnpm build:ui",
        "devUrl": "http://localhost:1421",
        "frontendDist": "./webapp/dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "splash-screen",
                "title": "UniChat Splash Screen",
                "url": "splash-screen.html",
                "width": 500,
                "height": 300,
                "center": true,
                "focus": true,
                "resizable": false,
                "maximizable": false,
                "minimizable": false,
                "closable": false,
                "decorations": false
            }
        ],
        "security": {
            "csp": {
                "default-src": "'none'",
                "script-src": "'self' 'unsafe-eval' 'unsafe-inline'",
                "style-src": "'self' 'unsafe-inline'",
                "img-src": "'self' blob: data: http://asset.localhost",
                "connect-src": "'self' ipc: http://ipc.localhost",
                "font-src": "'self'",
                "frame-ancestors": "'self'"
            }
        }
    },
    "bundle": {
        "active": true,
        "resources": ["assets/", "icons/", "plugins/", "widgets/", "LICENSE"],
        "targets": ["deb", "rpm", "appimage", "dmg", "nsis"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "licenseFile": "./LICENSE",
        "windows": {
            "nsis": {
                "installMode": "both"
            }
        }
    }
}

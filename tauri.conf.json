{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/refs/tags/tauri-v2.6.2/crates/tauri-cli/config.schema.json",
    "identifier": "unichat",
    "build": {
        "beforeDevCommand": "pnpm dev:ui",
        "beforeBuildCommand": "pnpm build:ui",
        "devUrl": "http://localhost:1421",
        "frontendDist": "./webapp/dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "main",
                "title": "Voguh's UniChat",
                "url": "index.html",
                "width": 1024,
                "height": 576,
                "maxWidth": 1280,
                "maxHeight": 720,
                "minWidth": 1024,
                "minHeight": 576,
                "maximizable": false
            },
            {
                "label": "youtube-chat",
                "title": "YouTube chat",
                "url": "youtube-await.html",
                "width": 400,
                "height": 576,
                "visible": false,
                "resizable": false,
                "maximizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "resources": ["icons/icon.png", "widgets/", "LICENSE"],
        "targets": ["deb", "rpm", "appimage", "dmg", "nsis"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "licenseFile": "./LICENSE",
        "windows": {
            "nsis": {
                "installMode": "both"
            }
        }
    }
}

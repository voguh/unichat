root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
rulers = 80, 100, 120

[.github/**/*]
indent_size = 2

[docs/**/*]
indent_size = 2

[examples/**/*]
indent_size = 2

[**/*.yaml, **/*.yml]
indent_size = 2
